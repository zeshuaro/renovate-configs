{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":pinOnlyDevDependencies"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchDepTypes": [
        "dev_dependencies"
      ],
      "rangeStrategy": "pin"
    }
  ]
}

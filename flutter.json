{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Flutter dependencies",
      "description": "These dependencies are used in Flutter SDK so their versions have to be aligned with the SDK",
      "enabled": false,
      "matchPaths": ["**/pubspec.yaml"],
      "matchPackageNames": [
        "material_color_utilities",
        "collection",
        "analyzer"
      ]
    },
    {
      "groupName": "Dart SDK",
      "matchFileNames": ["**/pubspec.yaml"],
      "matchPackageNames": ["dart"],
      "description": "Dart SDK updates are disabled as its version is managed by Flutter",
      "enabled": false
    },
    {
      "groupName": "Flutter SDK",
      "matchFileNames": [".fvm/fvm_config.json", "**/pubspec.yaml"],
      "matchPackageNames": ["flutter"],
      "labels": ["fluttersdk"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "flutter",
      "automerge": false
    }
  ]
}
